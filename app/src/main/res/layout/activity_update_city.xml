<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/ic_save"
        android:scaleType="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:id="@+id/update_img" />

        <EditText
            android:id="@+id/update_edit_name_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="text"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/update_img"
            />

        <EditText
            android:id="@+id/update_edit_description_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:hint="Description"
            android:ems="10"
            android:layout_below="@+id/update_linear_link"
            android:layout_centerHorizontal="true"
            />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/update_edit_description_city"
            android:layout_centerHorizontal="true"
            android:id="@+id/update_rating_city"
            />

        <LinearLayout
            android:id="@+id/update_linear_link"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/update_edit_name_city"
            android:layout_centerHorizontal="true"
            >

            <EditText
                android:id="@+id/update_edit_link_city"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:inputType="textUri"
                android:hint="Image Link"
                android:layout_weight="0.8" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_view"
                android:id="@+id/update_imageButton"
                android:layout_weight="0.2" />
        </LinearLayout>




    </RelativeLayout>


</FrameLayout>

